<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_weight="2"
        android:contentDescription="Image of item"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="itemName"
            android:layout_weight="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:text="itemDescription"
            android:textSize="12sp" />



    </LinearLayout>

    <ImageView
        android:id="@+id/alert_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        tools:srcCompat="@drawable/ic_warning_black_24dp" />
    <ImageView
        android:id="@+id/itemNotificationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="Alert icon for my posted items" />

</LinearLayout>